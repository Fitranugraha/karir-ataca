  <fieldset>
    <div class="nested-fields">
      <div class="form-inline">
        <div class="form-group">
          <%= f.label :title, "Judul"%>
          <%= f.text_field :title, class: "form-control", placeholder: "Judul" %>
        </div>
    

        <div class="form-group">
          <%= f.label :notes, "Keterangan"%>
          <%= f.text_area :notes, class: "form-control", placeholder: "Penjelasan singkat mengenai karya ilmiah." %>
        </div>


        <div class="form-group">
          <%= f.label :name, "Hapus"%>
          <%= link_to_remove_association '', f , class: 'btn btn-sm btn-danger  glyphicon glyphicon-trash' %>  
        </div>
      </div>
    </div>
  </fieldset>


        
