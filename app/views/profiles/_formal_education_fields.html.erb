  <fieldset>
    <div class="nested-fields">
      <div class="form-inline">
        <div class="form-group">
          <%= f.label :name, "Nama"%>
          <%= f.text_field :name, class: "form-control", placeholder: "Sekolah / Universitas" %>
        </div>

        <div class="form-group">
          <%= f.label :level, "Tingkat Pendidikan" %>
          <%= f.collection_select(:level, EducationLevel.all, :id, :name, {}, class: "form-control") %>
        </div>

        <div class="form-group">
          <%= f.label :start_date, "Dari" %>
          <%= f.date_select :start_date, { order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year - 70, :discard_day => true,include_blank: true   }, { class: "form-control" }%>
        </div>
        <div class="form-group">
          <%= f.label :end_date, "Sampai" %>
          <%= f.date_select :end_date, { order: [:day, :month, :year], start_year: Date.today.year, end_year: Date.today.year - 70, discard_day: true, include_blank: true}, { class: "form-control" } %>
        </div>
        <div class="form-group">
          <%= f.label :certificate, "Sertifikat" %>
          <%= f.text_field :certificate, class: "form-control", placeholder: "Sertifikat / Tanda Kelulusan" %>
        </div>

        <div class="form-group">
          <%= f.label :faculty , "Fakultas" %>
          <%= f.text_field :faculty, class: "form-control", placeholder: "Fakultas" %>
        </div>

        <div class="form-group">
          <%= f.label :department , "Jurusan" %>
          <%= f.text_field :department, class: "form-control", placeholder: "Jurusan" %>
        </div>

        <div class="form-group">
          <%= f.label :notes , "Catatan" %>
          <%= f.text_area :notes, class: "form-control", placeholder: "Catatan" %>
        </div>

        





        <div class="form-group">
          <%= f.label :name, "Hapus"%>
          <%= link_to_remove_association '', f , class: 'btn btn-sm btn-danger  glyphicon glyphicon-trash' %>  
        </div>
      </div>
    </div>
  </fieldset>


        
