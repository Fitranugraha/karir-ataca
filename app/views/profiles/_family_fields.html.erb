  <fieldset>
    <div class="nested-fields">
      <div class="form-inline">
        <div class="form-group">
          <%= f.label :name, "Nama"%>
          <%= f.text_field :name, class: "form-control", placeholder: "Nama Lengkap" %>
        </div>
        <div class="form-group">
          <%= f.label :relation, "Relasi" %>
          <%= f.collection_select(:relation, FamilyRelation.all, :id, :name, {}, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= f.label :address, "Alamat" %>
          <%= f.text_area :address, class: "form-control", placeholder: "Alamat" %>
        </div>
        <div class="form-group">
          <%= f.label :phone, "Telepon" %>
          <%= f.text_field :phone, class: "form-control", placeholder: "Telepon" %>
        </div>
        <div class="form-group">
          <%= f.label :birth_date, "Tanggal Lahir" %>
          <%= f.date_select :birth_date, { order: [:day, :month, :year], :start_year => Date.today.year - 12, end_year: Date.today.year - 70 },{:class => "form-control"} %>
        </div>
        <div class="form-group">
          <%= f.label :education, "Pendidikan Terakhir" %>
          <%= f.collection_select(:education, EducationLevel.all, :id, :name, {}, class: "form-control") %>
        </div>
        <div class="form-group">
          <%= f.label :job, "Pekerjaan" %>
          <%= f.text_field :job, class: "form-control", placeholder: "Pekerjaan" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "Hapus"%>
          <%= link_to_remove_association '', f , class: 'btn btn-sm btn-danger  glyphicon glyphicon-trash' %>  
        </div>
      </div>
    </div>
  </fieldset>


        
