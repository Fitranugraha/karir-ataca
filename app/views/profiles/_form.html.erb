    </div>

    <div class="form-group">
      <%= f.label :blood, 'Golongan Darah' %>
      <%= f.collection_select(:blood, Blood.all, :id, :name, {:include_blank => 'Please Select'}, {class: "form-control"}) %>
    </div>


    </fieldset>
</div>






    <fieldset>
      <h3>Informasi Kontak</h3>

          <div class="form-group">
            <%= f.label :current_address, "Alamat Tinggal Sekarang" %>
