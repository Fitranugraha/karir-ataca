          </div>

         
         <div class="form-inline">
          <div class="form-group">
            <%= f.label :email, "email" %>
            <%= f.text_field :email, class: "form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :phone, "Telpon Rumah/Kantor" %>
