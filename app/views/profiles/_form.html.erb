

<div class="authform">
  <%= form_for(profile) do |f| %>
    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Nama Lengkap" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>




<div class="form-horizontal">
    <fieldset>
    <div class="form-group">
      <%= f.label :id_no, "No KTP/SIM/Passport" %>
      <%= f.text_field :id_no, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :id_address, "Alamat Sesuai Kartu Identitas" %>
      <%= f.text_area :id_address, class: "form-control" %>
    </div>
    </fieldset>
</div>

<div class="form-inline">
    <fieldset>

    <div class="form-group">
      <%= f.label :nationality, "Kebangsaan" %>
      <%= f.text_field :nationality, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :tribe, "Suku" %>
      <%= f.text_field :tribe, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :married, "Status Pernikahan" %>
      <%= f.collection_select(:married, MarriedStatus.all, :id, :name, {:include_blank => 'Please Select'}, {:class => "form-control"}) %>


    </div>

    <div class="form-group">
      <%= f.label :religion, "Agama" %>
      <%= f.text_field :religion, class: "form-control"   %>
    </div>


    </fieldset>
</div>

<div class="form-inline">
  <fieldset>
      <div class="form-group">
        <%= f.label :birth_place, "Tempat Lahir" %>
        <%= f.text_field :birth_place, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :birth_date, "Tanggal Lahir" %>
        <%= f.date_select :birth_date, { order: [:day, :month, :year], :start_year => Date.today.year - 12, end_year: Date.today.year - 70, include_blank: true },{:class => "form-control"} %>
      </div>
    </fieldset>
</div>

<div class="form-inline">
  <fieldset>
    <div class="form-group">
      <%= f.label :sex, "Kelamin"%>
      <%= f.collection_select(:sex, Sex.all, :id, :name, {:include_blank => 'Please Select'}, { class: "form-control"}) %>
    </div>

    <div class="form-group">
      <%= f.label :height, "Tinggi Badan (cm)" %>
      <%= f.text_field :height, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :weight, "Berat Badan (kg)" %>
