<div class="authform">
  <%= form_for(profile) do |f| %>
    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, "Nama Lengkap" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :user_id %>
      <%= f.number_field :user_id %>
    </div>

    <div class="form-group">
      <%= f.label :id_no, "No KTP/SIM/Passport" %>
      <%= f.text_field :id_no, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :nationality, "Kebangsaan" %>
      <%= f.text_field :nationality, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :tribe, "Suku" %>
      <%= f.text_field :tribe, class: "form-control" %>
    </div>

    <fieldset>
      <div class="field">
        <%= f.label :birth_place, "Tempat Lahir" %>
        <%= f.text_field :birth_place, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :birth_date, "Tanggal Lahir" %>
        <%= f.date_select :birth_date, class: "form-control" %>
      </div>
    </fieldset>


    <div class="field">
      <%= f.label :age %>
      <%= f.number_field :age %>
    </div>

    <div class="field">
      <%= f.label :height %>
      <%= f.text_field :height %>
    </div>

    <div class="field">
      <%= f.label :weight %>
      <%= f.text_field :weight %>
    </div>

    <div class="field">
      <%= f.label :blood %>
      <%= f.text_field :blood %>
    </div>

    <div class="field">
      <%= f.label :sex %>
      <%= f.number_field :sex %>
    </div>

    <div class="field">
      <%= f.label :married %>
      <%= f.number_field :married %>
    </div>

    <div class="field">
      <%= f.label :religion %>
      <%= f.text_field :religion %>
    </div>

    <div class="field">
      <%= f.label :id_address %>
      <%= f.text_area :id_address, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :current_address %>
      <%= f.text_area :current_address, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.text_field :email, class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :mobile_phone %>
      <%= f.text_field :mobile_phone %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

</div>
